<interface>
  <template class="AddFilesButton" parent="AdwBin">
    <child>
      <object class="GtkStack" id="_stack">
        <property name="transition-type">crossfade</property>
        <property name="hhomogeneous">False</property>
        <property name="valign">center</property>
        <child>
          <object class="GtkStackPage">
            <property name="name">narrow</property>
            <property name="child">
              <object class="GtkBox">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkButton">
                    <property name="action-name">win.add-files</property>
                    <property name="icon-name">metadatacleaner-add-file-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Add Files</property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="action-name">win.add-folders</property>
                    <property name="icon-name">metadatacleaner-add-folder-symbolic</property>
                    <property name="tooltip-text" translatable="yes">Add Folders</property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
        <child>
          <object class="GtkStackPage">
            <property name="name">expanded</property>
            <property name="child">
              <object class="GtkBox">
                <property name="spacing">6</property>
                <child>
                  <object class="GtkButton">
                    <property name="action-name">win.add-files</property>
                    <property name="child">
                      <object class="AdwButtonContent">
                        <property name="label" translatable="yes">_Add Files</property>
                        <property name="icon-name">metadatacleaner-add-file-symbolic</property>
                        <property name="use-underline">True</property>
                      </object>
                    </property>
                  </object>
                </child>
                <child>
                  <object class="GtkButton">
                    <property name="action-name">win.add-folders</property>
                    <property name="child">
                      <object class="AdwButtonContent">
                        <property name="label" translatable="yes">Add _Folders</property>
                        <property name="icon-name">metadatacleaner-add-folder-symbolic</property>
                        <property name="use-underline">True</property>
                      </object>
                    </property>
                  </object>
                </child>
              </object>
            </property>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>