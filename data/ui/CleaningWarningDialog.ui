<interface>
  <template class="CleaningWarningDialog" parent="AdwAlertDialog">
    <property name="heading" translatable="yes">Clean Metadata?</property>
    <property name="body" translatable="yes">Make sure you backed up your files! This is irreversible.</property>
    <property name="default-response">clean</property>
    <property name="close-response">cancel</property>
    <responses>
      <response id="cancel" translatable="yes">_Cancel</response>
      <response id="clean" translatable="yes" appearance="destructive">Clean</response>
    </responses>
    <property name="extra-child">
      <object class="GtkCheckButton" id="_checkbutton">
        <property name="label" translatable="yes">Don't ask again</property>
        <property name="halign">center</property>
        <signal name="notify::active" handler="_on_settings_changed"/>
      </object>
    </property>
  </template>
</interface>